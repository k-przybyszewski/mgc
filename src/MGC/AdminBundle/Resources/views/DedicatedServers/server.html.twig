{% extends "::layoutAdmin.html.twig" %}

{% block content %}
<div class="mws-panel grid_3">
	<div class="mws-panel-header">
    	<span class="mws-i-24 i-list">{{ 'Dedicated server'|trans({}, 'admin') }}</span>
    </div>
    <div class="mws-panel-body">
		<form class="mws-form" method="post" novalidate="novalidate">
			{% if form_errors(form) %}
    			<div class="mws-form-message error">
    				Error!
    				{{ form_errors(form) }}
    			</div>
			{% endif %}
			<div class="mws-form-inline">
				<div class="mws-form-row">
					{{ form_label(form.name) }}
					<div class="mws-form-item small">
						{{ form_widget(form.name, {'attr': {'class': 'mws-textinput'}}) }}
					</div>
				</div>
				<div class="mws-form-row">
					{{ form_label(form.country) }}
					<div class="mws-form-item small">
						{{ form_widget(form.country, {'attr': {'class': 'mws-textinput'}}) }}
					</div>
				</div>
				<div class="mws-form-row">
					{{ form_label(form.city) }}
					<div class="mws-form-item small">
						{{ form_widget(form.city, {'attr': {'class': 'mws-textinput'}}) }}
					</div>
				</div>
				<div class="mws-form-row">
					{{ form_label(form.ipAddress) }}
					<div class="mws-form-item small">
						{{ form_widget(form.ipAddress, {'attr': {'class': 'mws-textinput'}}) }}
						{% if form_errors(form.ipAddress) %}
    						<div class="mws-error">
    						    {{ form_errors(form.ipAddress) }}
    						</div>
						{% endif %}
					</div>
				</div>
			</div>
			{{ form_rest(form) }}
            <div class="mws-button-row">
                <a href="{{ path('admin_dedicated_servers') }}" class="mws-button gray">{{ 'Cancel'|trans }}</a>
                <input type="submit" value="Save" class="mws-button red">
            </div>
		</form>
    </div>
</div>
<div class="mws-panel grid_5">
	<div class="mws-panel-header">
    	<span>{{ 'Select server location' }}</span>
    </div>
    <div class="mws-panel-body">
    	{{ render(controller('MGCAdminBundle:DedicatedServers:viewMap')) }}
    </div>
</div>
{% endblock %}