<table class="games">
    <thead>
        <tr>
            <th colspan="3">
                {{ form_label(form.sortBy) }}
            </th>
            <th>
                {{ form_widget(form.sortBy) }}
            </th>
        </tr>
    </thead>
    <tbody>
        {% for game in games %}
            {{ render(controller('MGCPortalBundle:GameServers:renderOne', {'game': game})) }}
        {% endfor %}
    </tbody>
</table>